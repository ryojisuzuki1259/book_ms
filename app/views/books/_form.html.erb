<div>
<%= form_with model:book, local:true do |f| %>
    <%= f.label :"書籍タイトル" %>
    <%= f.text_field :title %>
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.where(is_active: true), :id, :name %>
    <%= f.label :"発行年月日" %>
    <%= f.date_field :date_publication %>
    <%= f.label :"本棚" %>
    <%= f.collection_select :shelf_id, Shelf.where(is_active: true), :id, :name %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "保管" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "廃棄" %>
    <div><%= f.submit "保存する"%></div>
<% end %>
</div>