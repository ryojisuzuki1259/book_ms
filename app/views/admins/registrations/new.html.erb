<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :employee_number %><br />
    <%= f.text_field :employee_number, autofocus: true, autocomplete: "employee_number" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>
  
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_field :birthday, autocomplete: "birthday" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

